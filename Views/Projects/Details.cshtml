@model TaskManagementProject.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Project Details</h2>

<div class="container">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Project Information</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Created Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <div class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary mr-2" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

<style>
    /* Custom CSS for form layout */
    .card {
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Adding a subtle shadow */
    }

    .dl-horizontal dt {
        text-align: left;
        color: #555;
    }

    .dl-horizontal dd {
        margin-left: 0;
    }
</style>
